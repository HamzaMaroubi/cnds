<script src="~/areas/cnds/js/networks/index.js"></script>
@{
    ViewBag.Title = "Manage Networks";
    Layout = "~/Views/_Layout.cshtml";
}

<article class="panel panel-default" data-bind="css: {visible: true}">
    <div class="panel-heading">
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li>CNDS</li>
            <li class="active">Networks</li>
        </ol>
    </div>

    <div class="panel-body">
        <div id="gNetworks" data-bind="kendoGrid: {
            data: dsNetworks,
            sortable: true,
            filterable: true,
            height: '400',
            resizable: true,
            reorderable: true,
            columnMenu: { columns: true },
            scrollable: true,
            pageable: false,
             noRecords: true,
             selectable:'row',
             change: onNetworkRowSelectionChange,
            columns: [
                {field: 'Name', title: 'Network'},
                {field: 'Url', title: 'Url'},
                {field: 'ServiceUrl', title: 'Service Url'},
                {field: 'ServiceUserName', title:'Service User' }
            ]
        }">
        </div>
    </div>
    <div class="panel-footer">
        <button class="btn btn-default pull-right" style="margin-left:10px;" data-bind="click:onDeleteNetwork, enable:SelectedNetworks().length > 0"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete Selected</button>
        <button class="btn btn-default" style="margin-right:10px;" data-bind="click:onNewNetwork"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Network</button>
        <button class="btn btn-default" data-bind="click:onEditNetwork, enable:SelectedNetworks().length > 0"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Selected</button>
        <div class="clearfix"></div>
    </div>
</article>


