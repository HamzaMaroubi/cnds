@{
    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "Qlik Tests - Selection Test";
}

@section Head{
    <link rel="stylesheet" href="https://harriette/resources/autogenerated/qlik-styles.css" />
    <script src="https://harriette/resources/assets/external/requirejs/require.js"></script>    
    @*<script src="/scripts/qsocks/qsocks.bundle.js"></script>*@
    <script src="/js/qliktest/selectiontest.js"></script>

<style>
    /*
    * need to set the height for objects
    * set top padding to make room for selection toolbar
    */
    div.qvobject, div.qvplaceholder {
        padding: 30px 10px 10px 10px;
        height: 600px;
    }

    .qcmd {
        cursor: pointer;
    }

    #actionsContainer {
        margin:8px;
        border:1px solid #808080;
        padding:0px;
    }

        #actionsContainer nav {
            background-color:#e1ebfa;
            padding:4px;
        }

        #actionsContainer ul {
            margin:4px 12px;
            margin-left:24px;
        }

</style>
}

<section id="ContentWrapper">
    

    <div class="row">
        <div class="col-sm-12 qvobject" id="QV01">
        </div>
    </div>

    <section id="actionsContainer">
        <nav>
            <button class="btn btn-default" data-bind="click:clearLog">Clear Log</button>
            <button class="btn btn-default" data-bind="click:getSelections">Get Selections</button>
        </nav>
        <ul data-bind="foreach: Log">
            <li><span data-bind="html:$data"></span></li>
        </ul>
    </section>

</section>
